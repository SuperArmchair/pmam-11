@model Order

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-center mb-4">Оформлення замовлення</h3>
            <form asp-action="Checkout" method="post" class="form-horizontal">
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <div class="col-12">
                        <input asp-for="name" required class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="surname" class="control-label"></label>
                    <div class="col-12">
                        <input asp-for="surname" required class="form-control" />
                        <span asp-validation-for="surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="phone" class="control-label"></label>
                    <div class="col-12">
                        <input asp-for="phone" required class="form-control" />
                        <span asp-validation-for="phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <div class="col-12">
                        <input asp-for="email" required class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-12">
                        <input class="btn btn-success btn-block" type="submit" value="Завершити замовлення" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
